@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

  <!-- Header -->
  <header class="masthead">
    <div class="container">
        <div class="intro-text promo-header-container">
        <div class="intro-heading promo-header">@Model.Value("promoHeadline")</div>
        <div class="h5 promo-subheader">@Model.Value("promoSubheader")</div>
      </div>
  </header>
  
  <div class="container">
      <div class="product-header-container">
        <div class="h1 product-header">We offer</div>
        <div class="product-subheader">The following packages</div>
      </div>
        @Html.Partial("ListOfProductItems", Model)
    </div>
</div>

<div class="container">
    <div class="h5 contact-body w-75">
        <div>
            @Model.Value("contactBodyText")
        </div>
        <button class="btn btn-lg contact-button" type="submit">
            <img class="contact-button-img" src="/img/support-icon.png">
            <label>@Model.Value("contactButtonText")</label>
            </button>
    </div>
</div>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="row align-items-center mt-5 footer-content">
        <div class="col-md-4 footer-left-content">
          <div class="h4">CVR: 36030410</div>
          <div class="h4">info@houseofcode.io</div>
          <div class="h4">+45 72 17 02 20</div>
        </div>
        <div class="footer-filler"></div>
        <div class="footer-right-content">
            <img class="logo-img" src="/img/HouseOfCode_logo.svg">
            <span class="footer-logo-header">House of Code</span>
        </div>
      </div>
    </div>
  </footer>