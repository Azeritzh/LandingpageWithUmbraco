@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.FormForSigningUp>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}
<header class="form-background">
    <div class="container">
        <div class="form-container w-25 text-center mx-auto">
            <h1 class="h2 mb-3 font-weight-bold form-title">@Model.Value("signUpHeader")</h1>
            <form class="form-signin form-body">
             <label for="inputName" class="form-header">Name</label>
              <input type="name" id="inputName" class="form-control" placeholder="" required="" autofocus="">
              <label for="inputEmail" class="form-header">Email</label>
              <input type="email" id="inputEmail" class="form-control" placeholder="6 characters minimum" required="" autofocus="">
              <label for="inputPassword" class="form-header">Password</label>
              <input type="password" id="inputPassword" class="form-control" placeholder="" required="">
              <label for="inputPassword" class="form-header">Repeat password</label>
              <input type="password" id="inputPassword" class="form-control" placeholder="" required="">
            
              <button class="btn btn-lg btn-block item-button" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</header>
