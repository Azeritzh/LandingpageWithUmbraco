@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.FormForSigningIn>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

<header class="form-background">
    <div class="container">
        <div class="form-container w-25 text-center mx-auto">
            <h1 class="h2 mb-3 font-weight-bold form-title">@Model.Value("formSignInHeader")</h1>
            <form class="form-signin form-body">
              <label for="inputEmail" class="form-header">Email address</label>
              <input type="email" id="inputEmail" class="form-control" placeholder="" required="" autofocus="">
              <label for="inputPassword" class="form-header">Password</label>
              <input type="password" id="inputPassword" class="form-control" placeholder="" required="">
              <div class="checkbox mb-3 mt-3">
                <label>
                  <input type="checkbox" value="remember-me"> Remember me
                </label>
              </div>
              <button class="btn btn-lg btn-block item-button" type="submit">Sign in</button>
            </form>
            <div class="form-text-button">
                <a class="form-text-button" href="/sign-up">Sign up</a>
            </div>
            <div class="form-text-button">
                <a class="form-text-button" href="">Forgot password</a>
            </div>
            
        </div>
    </div>
</header>


